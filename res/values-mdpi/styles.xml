<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseDialogTheme" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="KeyBoardTheme" parent="BaseDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="KeyBoardButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_keybutton</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginBottom">6dip</item>
    </style>


    <style name="PopUpWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_right_in_percent</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out_percent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="PopUpWindowVolumeAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_volume_scale_in_percent</item>
        <item name="android:windowExitAnimation">@anim/popup_volume_scale_out_percent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="PopUpWindowEffectAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_effect_scale_in_percent</item>
        <item name="android:windowExitAnimation">@anim/popup_effect_scale_out_percent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="bottomMenuNormalButton">
        <item name="android:layout_width">86.19px</item>
        <item name="android:layout_height">107.73px</item>
        <item name="android:layout_marginLeft">18.67px</item>
    </style>

    <style name="tabMenuRadioButton">
        <item name="android:layout_width">146.22px</item>
        <item name="android:layout_height">118.4px</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">23.3px</item>
    </style>
    <style name="tabMenuRadioButtonSelect">
        <item name="android:layout_marginLeft">100px</item>
        <item name="android:layout_width">146.22px</item>
        <item name="android:layout_height">118.4px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="tabMenuPanelItemText">
        <item name="android:layout_height">118.4px</item>
    </style>
    
    <style name="tabMenuPanleItemIcon">
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_width">111.4px</item>
        <item name="android:layout_height">111.4px</item>
    </style>
    <style name="tabMenuPanleItemArrow">
        <item name="android:layout_width">18.8px</item>
        <item name="android:layout_marginLeft">213.3dip</item>
        <item name="android:layout_height">35.51px</item>
    </style>

    <style name="textGaryBigTitle">
        <item name="android:textColor">@color/gray_text_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textGaryNoramlTitle">
        <item name="android:textColor">@color/gray_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textPurpleTitle">
        <item name="android:textColor">@color/purple_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btnVolumeBarMarkStyle">
        <item name="android:layout_width">40.67px</item>
        <item name="android:layout_height">23.33px</item>
        <item name="android:background">@drawable/ctrl_volume_mark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#B77F15</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">3.33px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">130px</item>
    </style>

</resources>