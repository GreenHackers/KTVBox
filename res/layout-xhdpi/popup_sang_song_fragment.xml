<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ListView
        android:id="@android:id/list"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:divider="@drawable/dotted_line_gray"
        android:dividerHeight="2px" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_prePage"
            android:layout_width="31px"
            android:layout_height="40px"
            android:background="@drawable/btn_pop_left_arrow"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_pageNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="22sp"
            android:text="1/3"
            android:layout_toRightOf="@id/btn_prePage"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/btn_nextPage"
            android:layout_width="31px"
            android:layout_height="40px"
            android:background="@drawable/btn_pop_right_arrow"
            android:layout_toRightOf="@id/tv_pageNum"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</LinearLayout>